<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".landlord.CreatePropertyActivity">

    <TextView
        android:id="@+id/tvCreatePropertyTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:gravity="center"
        android:textSize="24sp"
        />

    <EditText
        android:id="@+id/etAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Address"
        android:textSize="24sp"
        android:gravity="center"
        android:layout_margin="8dp"
        />
    <EditText
        android:id="@+id/etCity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="City"
        android:textSize="24sp"
        android:gravity="center"
        android:layout_margin="8dp"
        />

    <EditText
        android:id="@+id/etPostal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Postal Code"
        android:textSize="24sp"
        android:gravity="center"
        android:layout_margin="8dp"
        />

    <Spinner
        android:id="@+id/createSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        />



    <EditText
        android:id="@+id/etSpecs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Specifications"
        android:textSize="24sp"
        android:gravity="center"
        android:layout_margin="8dp"
        />

    <EditText
        android:id="@+id/etDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="26sp"
        android:layout_margin="8dp"
        android:hint="Description"
        android:gravity="center"
        android:inputType="textMultiLine" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:gravity="center"
        >
        <CheckBox
            android:id="@+id/checkAvailable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Available"
            android:textSize="24sp"

            />
    </LinearLayout>

    <!--    Spacing TV-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/btnCreate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Create"
        android:textSize="24sp"/>


</LinearLayout>